<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <ImageView
        android:layout_width="641dp"
        android:layout_height="906dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondowww"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etUserIdentifier"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="Email or user ID"
            android:inputType="text"
            android:textColor="@color/texto_negro" />

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/texto_negro" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_selector"
            android:onClick="enviarLogin"
            android:padding="12dp"
            android:text="LOG IN"
            android:textColor="@color/texto_negro" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoToRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text= "Create an account"
            android:textColor= "@color/texto_negro" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>